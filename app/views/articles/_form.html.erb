<%= render 'shared/errors', obj: @article %>

<div class = 'row'>
  <div class = 'col-12'>
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = "form-group">
        <div class = "control-label col-2">

          <%= f.label :title %>
      </div>
      <div class = 'col-11'>
          <%= f.text_field :title, class: "form-control",placeholder: "Title of Query",autofocus:true %>

    </div>
    </div>
    <div class = "form-group">
      <div class = "control-label col-2">

          <%= f.label :description %>
          </div>
            <div class = 'col-11'>
          <%= f.text_area :description, rows: 10, class: "form-control",placeholder: "Body of Query"%>
        </div>

        <div class = "form-group">
          <div class = "col-4">
          <%= f.submit class: "btn btn-primary btn-md" %>
          </div>
          </div>
      <% end %>

      <div class ="col-4 offset-4">

    </div>
</div>
</div>
