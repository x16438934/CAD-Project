<% obj.each do |article| %>

  <div class="row">
    <div class="col-8 offset-2">
      <div class="cards card-body bg-dark" >

        <div class="article-title">

          <%= link_to article.title, article_path(article) %>

        </div>
        <!-- adds user data to records -->
        <div class="article-body">
          <%= truncate(article.description, length: 100, ) %>
          <div class="article-meta-details">

          <small>Created by: <%= article.user.username if article.user%>,
          <%= time_ago_in_words(article.created_at) %> ago, last updated: <%= time_ago_in_words(article.updated_at) %> ago</small>

          </div>

        </div>
        <div class="article-actions">
          <%= link_to "Edit this query", edit_article_path(article), class: "btn btn-xs btn-primary" %>
</div>

<div class="article-delete">
  <div class="col-8 offset-9">
  <%= button_to "Delete this query", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this query?"}, class: "btn btn-xs btn-danger" %>
</div>
</div>


      </div>
    </div>
</div>

<% end %>
